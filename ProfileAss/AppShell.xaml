<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProfileAss.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:ProfileAss.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="ProfileAss">

    <TabBar>
        <Tab Title="home" Icon="homa.png">
            <ShellContent ContentTemplate="{DataTemplate view:ProductPage}" />
        </Tab>  
        <Tab Title="cart" Icon="basket.png">
            <ShellContent ContentTemplate="{DataTemplate view:BasketPage}" />
        </Tab>     
        <Tab Title="profile" Icon="user.png">
            <ShellContent ContentTemplate="{DataTemplate view:ProfilePage}" />
        </Tab>
    </TabBar>

</Shell>
